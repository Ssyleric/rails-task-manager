<h1><%= @task.title %></h1>
<%= link_to "Edit this task", edit_task_path %>


<% if @task.completed %>
 <p><%= @task.details %></p>
 <p><i class="far fa-check-circle"></i>This task is completed</p>
<% else %>
 <p><%= @task.details %></p>
 <p><i class="far fa-check-circle"></i>This task is not completed yet</p>
<% end %>

<%= link_to "Back to list", tasks_path %>
